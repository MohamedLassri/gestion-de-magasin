@model gestion_de_magasin.Models.Article

<div class="container mt-4">
    <h2>Ajouter un nouvel article</h2>
    <hr />
    @* Ne pas oublier enctype pour l'image *@
    <form asp-action="Create" enctype="multipart/form-data">
        <div class="row">
            <div class="col-md-6 mb-3">
                <label asp-for="Nom" class="form-label">Nom</label>
                <input asp-for="Nom" class="form-control" />
            </div>
            <div class="col-md-6 mb-3">
                <label>Fournisseur</label>
                <select asp-for="FournisseurId" class="form-select" asp-items="ViewBag.FournisseurId"></select>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6 mb-3">
                <label asp-for="Prix" class="form-label">Prix</label>
                <input asp-for="Prix" class="form-control" type="number" step="0.01" />
            </div>
            <div class="col-md-6 mb-3">
                <label asp-for="Stock" class="form-label">Stock</label>
                <input asp-for="Stock" class="form-control" />
            </div>
            <div class="col-md-6 mb-3">
                <label asp-for="Description" class="form-label">Description</label>
                <input asp-for="Description" class="form-control" />
            </div>
        </div>
        <div class="mb-3">
            <label class="form-label">Image du produit</label>
            <input type="file" name="imageFile" class="form-control" accept="image/*" />
        </div>
        <button type="submit" class="btn btn-success">Enregistrer</button>
        <a asp-action="Index" class="btn btn-secondary">Retour</a>
    </form>
</div>